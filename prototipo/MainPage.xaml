<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="prototipo.MainPage"
             Shell.NavBarIsVisible="false">
       
    <Grid>
        <Image x:Name="hehe"
               Source="pixel.jpg"
               Aspect="AspectFill"/>

        <ProgressBar
            x:Name="progressBar"
            Progress="0.5"
            BackgroundColor="Transparent"
            ProgressColor="Red"
            VerticalOptions="Start"
            HorizontalOptions="Center"
            WidthRequest="300"
            HeightRequest="20"/>
        
        <Image Source="top.gif"
               Margin="0,270,0,0"/>

        <Label
               FontSize="45"
               HorizontalTextAlignment="Center"
               VerticalOptions="Center"
               TextColor="Black"
               Margin="0,0,0,300"/>
        
        <Grid VerticalOptions="Center"     
              HeightRequest="170"
              WidthRequest="60"
              HorizontalOptions="End"
              BackgroundColor="Transparent">
           
            <ImageButton Source="yakisoba.png"
            Clicked="botao1"
            />
            <ImageButton Source="coracao.webp"
            Clicked="botao1"
            />
            <ImageButton Source="susji"
            Clicked="botao1"
            />
        </Grid>
    </Grid>
</ContentPage>
